<Window x:Class="MyAppLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        KeyDown="Window_KeyDown"
        Title="MainWindow" Height="470" Width="800">
    <Grid Margin="10">
        <!--親のGrid-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 固定ショートカット -->
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="10" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,20,0">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,10">初期固定ショートカット</TextBlock>
                <Button Content="GoogleChrome" Click="Click_GoogleButton" Height="30" Width="120" Margin="0,5"/>
                <Button Content="X" Click="Click_X" Height="30" Width="120" Margin="0,5"/>
                <Button Content="ChatGPT" Click="Click_ChatGPT" Height="30" Width="120" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- 任意ショートカット -->
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock FontSize="20" Text="任意ショートカットキー" HorizontalAlignment="Left" Margin="0,0,0,10"/>

            <Grid>
                <!--子のGrid-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 番号 -->
                <TextBlock Text="1" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="2" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="3" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="4" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="5" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="6" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="7" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="8" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>

                <!-- ボタン -->
                <Button x:Name="Button1" Content="empty1" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 1" Opacity="1" Grid.Row="0" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button2" Content="empty2" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 2" Opacity="1" Grid.Row="1" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button3" Content="empty3" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 3" Opacity="1" Grid.Row="2" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button4" Content="empty4" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 4" Opacity="1" Grid.Row="3" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button5" Content="empty5" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 5" Opacity="1" Grid.Row="4" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button6" Content="empty6" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 6" Opacity="1" Grid.Row="5" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button7" Content="empty7" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 7" Opacity="1" Grid.Row="6" Grid.Column="1" Margin="5" Width="120" Height="30"/>
                <Button x:Name="Button8" Content="empty8" Click="Button_URL" ToolTip="ショートカット:cntl + alt + 8" Opacity="1" Grid.Row="7" Grid.Column="1" Margin="5" Width="120" Height="30"/>

                <!-- 設定ボタン -->
                <Button Content="新規登録" Click="Click_NewRegisterWindow"
                        Grid.Row="8" Grid.Column="2" Margin="10" Width="120" Height="30"/>

                <Button Content="削除設定" Click="Click_DeleteSetting"
        Grid.Row="8" Grid.Column="3" Margin="10" Width="120" Height="30"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
